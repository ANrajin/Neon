
@{
    ViewData["Title"] = "Create";
}
@section Styles{
    <link rel="stylesheet" href="~/assets/admin/plugins/summernote/summernote-bs4.min.css"/>
    <link rel="stylesheet" href="~/assets/admin/plugins/select2/select2.min.css"/>
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <form method="post" asp-area="Admin" asp-controller="Posts" asp-action="Create" asp-antiforgery="true">
                            <div class="form-group mb-3">
                                <label class="form-label">Title</label>
                                <input class="form-control" type="text"/>
                                <span></span>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label">Category</label>
                                <select id="categories" class="form-control"></select>
                                <span></span>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label">Description</label>
                                <textarea id="desc"></textarea>
                                <span></span>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" value="" id="status" checked="checked">
                                <label class="form-check-label" for="status">
                                    Publish
                                </label>
                            </div>
                            <div class="my-2">
                                <button type="submit" class="btn btn-outline-primary">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/assets/admin/plugins/summernote/summernote-bs4.min.js"></script>
    <script src="~/assets/admin/plugins/select2/select2.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#desc").summernote({
                height: 500,
            });
            
            $("#categories").select2();
        });
    </script>
}

